#!/bin/bash

# Takes screenshot of user selected area

usage() {
    echo "$(tput bold)screenshot$(tput sgr0)
    screenshot [-s]

    Takes screenshot. If -s is provided, only a selection
    will be captured.
    "
    exit
}

fn="$HOME/desktop/$(date +%s).png"

case $1 in
  -h|--help) usage ;;
esac

if [[ $1 == "-s" ]]; then
    maim -s > $fn
else
    maim > $fn
fi

{
res=$(dunstify \
          --action='open,Open' \
          --action='delete,Delete' \
          --action='copy,Copy' "Screenshot" "~$fn"\
          --appname="Screenshot" \
          --raw_icon="$fn"
)

case $res in
    open)
        feh $fn ;;
    delete)
        rm $fn ;;
    copy)
        cat $fn | xclip -selection clipboard -t image/png
        rm $fn
esac
} &
