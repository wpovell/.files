#!/bin/bash

PATH=$PATH:~/bin/support

started() {
    pgrep "$1" >/dev/null 2>&1
}

theme refresh

if ! started emacs; then
    restart-emacs
fi

if ! started alacritty; then
    term --class dropdown &
fi

if ! started redshift; then
   redshift &
fi

if ! started dropbox; then
    drp start -i &
fi

if ! started xautolock; then
    startlocker &
fi

if ! started spotify; then
    spotify &
fi

xrandr --auto &
i3-msg workspace "1: I"
