#!/bin/bash

# Script to play alarm sound + show notif at given time

usage() {
    echo "$(tput bold)alarm$(tput sgr0)
    alarm <MESSAGE> <TIME_INFO...>

    Plays alarm sound and shows dunst notif with given message at given time.
    TIME_INFO param should be in some format at accepts.
    "
    exit
}

case $1 in
    -h|--help) usage ;;
esac


sudo atd
echo "$HOME/bin/support/_alarm $2" | at "now + $1"
