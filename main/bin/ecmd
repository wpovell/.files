#!/bin/bash

# Edits given command arg

usage() {
    echo "$(tput bold)editcmd$(tput sgr0)
    editcmd SCRIPT

    Opens the script passed in emacs. Script must be under ~/bin to be found.
    "
    exit
}

case $1 in
    -h|--help) usage ;;
esac

if [[ -z $1 ]]; then
  usage
  exit
fi

FILE=$(find ~/bin/ -name $1 -type f)

if [[ -e $FILE ]]; then
  emacs -nw $FILE
else
  echo "ERROR: No such script '$1'"
  echo -n "Create script? [y/n] "
  read ans
  if [[ "$ans" = "y" ]]; then
    FILE="$HOME/bin/$1"
    touch $FILE
    chmod +X $FILE
    emacs -nw $FILE
  fi
fi
