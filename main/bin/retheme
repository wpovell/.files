#!/bin/bash
cd ~/dotfiles
if [ -n "$1" ];
then
CUR_THEME="$(head -n1 ~/.theme 2>/dev/null).theme"
CUR_THEME="${CUR_THEME:1}"
stow -D $CUR_THEME 2>/dev/null
stow $1".theme"
fi
feh --bg-scale ~/.wallpaper
xrdb -merge -cpp /usr/bin/cpp -I$HOME ~/.Xresources
polybar-msg cmd restart
i3-msg reload
refresh
killall dunst
dunst &
xup
