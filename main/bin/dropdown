#!/bin/bash

# Creates dropdown terminal on login

xup
sleep 1
sess=$(tmux list-sessions | grep "[157x12]")
sess=${sess:0:1}
if [[ -z "$sess" ]]
then
    urxvt -name dropdown &
else
    urxvt -name dropdown -e tmux attach -t $sess &
fi

sleep 1
i3-msg [instance="dropdown"] floating enable, resize set $(xrandr | grep "*" | perl -lne 'print $1 if /([0-9]+)x/') 300, move position 0px 27px, move scratchpad
