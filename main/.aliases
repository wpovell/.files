# Emacs
alias e="$EDITOR"

alias cpu="ps -eo pid,comm,%mem,%cpu --sort=-%cpu | head -n 10"

# Browser
alias browser="$BROWSER"
alias chrome="/usr/bin/chromium >/dev/null 2>&1"

# Warn me when I rm multiple things
alias rm="rm -I"

# Ls, now with color!
alias ls="exa"
alias l="ls"
alias la="ls -a"
alias ll="ls -l"

# Weather
alias weather="curl wttr.in 2>/dev/null | head -n 7 | tail -n +3"
alias weather-all="curl wttr.in 2>/dev/null | tail -n 33 | head -n 30"

# cd shortcuts
alias ,="cd .."
alias ,,="cd ../.."

## Misc ##
alias less="less -R"
alias dfs="cd ~/.files"
alias rw="sudo restart-wifi"
alias f="find . -name"
alias re="restart-emacs"
alias t="tmux"
alias wifi="sudo wifi-menu"
alias root="sudo -s"
alias git="hub"
alias g="git"
alias r="ranger"
alias m="~/bin/support/polybar/mail show"
alias pdf="evince 2>/dev/null"
alias cpy="xclip -selection clipboard"
alias pst="xclip -o -selection clipboard"
alias open="xdg-open"
alias xup="xrdb -I$HOME ~/.Xresources"
alias startx="startx >/tmp/startx.out 2>&1"
alias mosh="mosh --experimental-remote-ip=remote"
alias grep="grep --color='auto'"
alias df="df -h"
alias diff="colordiff"
alias xx="atool -x"
alias json="python -m json.tool"
alias ax="chmod a+x"

# Quick todo edit
alias etodo="$EDITOR files/linux_todo"